<!--pages/map/map.wxml-->
<view class="container">
  <map
    id="map"
    longitude="117.299652"
    latitude="31.871727"
    scale="8"
    controls=""
    bindcontroltap="controltap"
    markers="{{markers}}"
    bindmarkertap="markertap"
    polyline=""
    bindregionchange="regionchange"
    show-location
    style="width: 100%; height: 500px;"
  >
  </map> 
  <view class="markercolors">
    <text>第一批：</text><canvas canvas-id="myblue" style="border:1px solid;background-color:blue;"></canvas>
    <text>第二批：</text><canvas canvas-id="myyellow" style="border:1px solid;background-color:yellow;"></canvas>
    <text>第三批：</text><canvas canvas-id="mygreen" style="border:1px solid;background-color:green;"></canvas>
    <text>第四批：</text><canvas canvas-id="myred" style="border:1px solid;background-color:red;"></canvas>
  </view>

  <view class="buttons">
    <button>显示</button><button>取消显示</button>
  </view>

  <view class="info">
    {{areas.province}}
    {{areas.city}}
    {{areas.time}}
  </view>
</view>
